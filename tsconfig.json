{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "build",
    "isolatedModules": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
